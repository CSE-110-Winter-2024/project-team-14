<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the RadioButton is checked -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <!-- Set a solid color as the background -->
            <solid android:color="#d3d3d3"/> <!-- Replace #FF0000 with your desired highlight color -->
            <stroke
                android:width="2dp"
                android:color="#A0000000" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="#A0000000" />
        </shape>
    </item>
</selector>